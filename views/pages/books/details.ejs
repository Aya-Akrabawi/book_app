    <main>
        <form>
            <ul>
                <% data.forEach(book=>{ %>
                    <li><img src=<%=book.image%> alt="image"></li>
                    <li><h3>Title: <%=book.title%></h3></li>
                    <li><h4>Author: <%=book.author%></h4></li>
                    <li><h4> ISBN : <%=book.isbn%></h4></li>
